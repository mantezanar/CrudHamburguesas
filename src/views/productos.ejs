<%- include('partials/_header') %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
            
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                    
                    </tr>

                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                          <tr>
                            <td><%= i + 1 %></td>
                            <td><%= data[i].nombre %></td>
                            <td><%= data[i].tipo %></td>
                            <td><%= data[i].precio %></td>
                            <td>
                                <a href="/update/<%=data[i].id%>" class="btn btn-success">Editar</a>
                                <a href="/delete/<%=data[i].id%>" class="btn btn-danger">Borrar</a>                                
                            </td>
                          </tr>
                        <% } %>
                      <% } %>

                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre del producto" class="form-control">
                        </div>
                        <div class="form-group">
                            <select type="text" name="tipo" placeholder="Tipo del producto" class="form-control">
                                <option>Hamburguesas</option>
                                <option>Acompa√±amientos</option>
                                <option>Bebidas</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="descripcion" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" name="precio" placeholder="Precio del producto" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar Producto
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>